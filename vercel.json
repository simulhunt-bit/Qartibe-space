{
  "redirects": [
    {
      "source": "/blog/:slug",
      "destination": "/blog.html?post=:slug",
      "permanent": false
    },
    {
      "source": "/portfolio/:slug",
      "destination": "/portfolio.html?project=:slug",
      "permanent": false
    }
  ],
  "rewrites": [
    {
      "source": "/blog",
      "destination": "/blog.html"
    },
    {
      "source": "/blog/",
      "destination": "/blog.html"
    },
    {
      "source": "/blog/:path*",
      "destination": "/blog.html"
    },
    {
      "source": "/portfolio",
      "destination": "/portfolio.html"
    },
    {
      "source": "/portfolio/",
      "destination": "/portfolio.html"
    },
    {
      "source": "/portfolio/:path*",
      "destination": "/portfolio.html"
    }
  ]
}
